{
  "name": "verb-realtime-starter",
  "version": "1.0.0",
  "description": "Real-time application starter with WebSocket-heavy features",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "test": "bun test",
    "lint": "biome check .",
    "typecheck": "bun --no-install --type-check src/index.ts"
  },
  "dependencies": {
    "verb": "latest",
    "redis": "^4.6.0",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.22.4",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/pg": "^8.10.9",
    "bun-types": "latest"
  },
  "keywords": [
    "verb",
    "realtime",
    "websocket",
    "collaboration",
    "chat",
    "live"
  ],
  "license": "MIT"
}